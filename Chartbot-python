from datetime import datetime
import pytz

def convert_rfc1123_to_local(email_time):
    """Convert RFC 1123 email timestamp to local timezone."""
    # Replace with your local timezone
    local_tz = pytz.timezone('America/New_York')  # Example timezone

    # Parse the RFC 1123 formatted string
    try:
        # Use strptime to parse the RFC 1123 timestamp
        email_time = datetime.strptime(email_time, "%a, %d %b %Y %H:%M:%S %z")
        
        # Convert to local timezone
        local_time = email_time.astimezone(local_tz)

        return local_time.strftime("%Y-%m-%d %H:%M:%S")  # Format the output
    except Exception as e:
        print("Error parsing date:", e)
        return "Unknown"

# Example usage
email_timestamp = "Thu, 09 Mar 2023 23:07:58 +0530"  # Note: +530 should be +0530 for proper parsing
local_time = convert_rfc1123_to_local(email_timestamp)
print("Local Time:", local_time)
